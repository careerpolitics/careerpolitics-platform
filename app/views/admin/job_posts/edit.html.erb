<header class="mb-4">
  <h1 class="crayons-title mb-0">Edit Job Post</h1>
</header>

<div class="crayons-card p-6">
  <%= form_with model: @job_post, url: admin_job_post_path(@job_post.id), local: true do |form| %>
    <% if @job_post.errors.any? %>
      <div class="crayons-notice crayons-notice--danger mb-4">
        <h3>Please fix the following errors:</h3>
        <ul>
          <% @job_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-4">
      <%= form.label :title, "Title *", class: "crayons-field__label" %>
      <%= form.text_field :title, required: true, class: "crayons-textfield" %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :post_type, "Post Type", class: "crayons-field__label" %>
      <%= form.select :post_type, options_for_select([
        ['Select a type...', ''],
        ['New Update', 'new_update'],
        ['Admit Card', 'admit_card'],
        ['Online Form', 'online_form']
      ], @job_post.post_type), {}, { class: "crayons-select" } %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :category, "Category", class: "crayons-field__label" %>
      <%= form.text_field :category, class: "crayons-textfield" %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :link, "Link *", class: "crayons-field__label" %>
      <%= form.url_field :link, required: true, class: "crayons-textfield" %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :color, "Card Background Color (Hex code)", class: "crayons-field__label" %>
      <%= form.text_field :color, placeholder: "#3b82f6", class: "crayons-textfield" %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :position, "Priority Position (lower numbers appear first)", class: "crayons-field__label" %>
      <%= form.number_field :position, min: 0, class: "crayons-textfield" %>
      <small class="color-secondary">Lower numbers appear first in listings.</small>
    </div>

    <div class="form-group mb-4">
      <%= form.label :featured, class: "crayons-field__label" do %>
        <%= form.check_box :featured, class: "crayons-checkbox" %>
        Featured (shows in top cards)
      <% end %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :published, class: "crayons-field__label" do %>
        <%= form.check_box :published, class: "crayons-checkbox" %>
        Published
      <% end %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :approved, class: "crayons-field__label" do %>
        <%= form.check_box :approved, class: "crayons-checkbox" %>
        Approved
      <% end %>
    </div>

    <div class="form-actions flex gap-2">
      <%= form.submit "Update Job Post", class: "crayons-btn crayons-btn--primary" %>
      <%= link_to "Cancel", admin_job_posts_path, class: "crayons-btn crayons-btn--secondary" %>
    </div>
  <% end %>
</div>


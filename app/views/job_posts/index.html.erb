<% content_for :title, "Latest Government Job Updates - CareerPolitics" %>

<style>
  .jobs-page { font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; background: linear-gradient(135deg, #f5f7fa, #e3e8f5); color: #1a1a1a; line-height: 1.5; min-height: 100vh; }
  .jobs-container { max-width: 1200px; width: 90%; margin: 10px auto; padding: 10px; }
  .jobs-buttons { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 15px; margin: 10px 0; }
  .jobs-btn { padding: 15px; text-align: center; color: #fff; text-decoration: none; border-radius: 8px; font-weight: 600; transition: transform .3s ease, box-shadow .3s ease, background .3s ease; box-shadow: 0 4px 8px rgba(0,0,0,.1); display: flex; align-items: center; justify-content: center; font-size: 1em; border: none; cursor: pointer; }
  .jobs-btn:hover { transform: translateY(-3px); box-shadow: 0 8px 16px rgba(0,0,0,.15); }
  .jobs-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; margin-top: 20px; }
  .jobs-card { background: #fff; padding: 20px; border-radius: 12px; box-shadow: 0 6px 12px rgba(0,0,0,.05); transition: all .3s ease; border-left: 5px solid #0056b3; position: relative; }
  .jobs-card:hover { transform: translateY(-4px); box-shadow: 0 10px 20px rgba(0,0,0,.1); }
  .jobs-card h2 { color: #0056b3; margin-bottom: 12px; font-size: 1.4em; font-weight: 700; text-transform: uppercase; letter-spacing: .5px; display: flex; align-items: center; gap: 8px; }
  .jobs-card ul { list-style: none; padding: 0; margin: 0; }
  .jobs-card li { padding: 10px 0; border-bottom: 1px solid #eee; transition: background .3s ease; }
  .jobs-card li:last-child { border-bottom: none; }
  .jobs-card li:hover { background: #f8f9fa; }
  .jobs-card a { color: #0056b3; text-decoration: none; font-size: 1em; transition: color .3s ease, padding-left .3s ease; display: block; }
  .jobs-card a:hover { color: #003d82; padding-left: 8px; }
  .jobs-dynamic { background: linear-gradient(135deg, #fff, #f0f4ff); padding: 20px; border-radius: 12px; box-shadow: 0 6px 12px rgba(0,0,0,.05); margin-top: 20px; border-left: 5px solid #218838; }
  .jobs-dynamic h3 { color: #218838; margin-bottom: 12px; font-size: 1.3em; font-weight: 700; text-transform: uppercase; }
  .jobs-dynamic .meta { font-size: .9em; color: #666; font-style: italic; }
  .jobs-loading { text-align: center; color: #666; margin: 20px 0; font-size: 1.1em; display: none; }
  @media (max-width: 600px) {
    .jobs-container { padding: 10px; }
    .jobs-buttons { grid-template-columns: 1fr; }
    .jobs-grid { grid-template-columns: 1fr; }
    .jobs-btn { font-size: .9em; padding: 12px; }
    .jobs-card h2 { font-size: 1.2em; }
    .jobs-dynamic h3 { font-size: 1.1em; }
  }
</style>

<main class="jobs-page">
  <section class="jobs-container">
    <div class="jobs-buttons">
      <% @featured_job_posts.each do |job_post| %>
        <% color = job_post.color.presence || "#0056b3" %>
        <a href="<%= job_post.link.presence || job_post_path(job_post.slug) %>" class="jobs-btn" style="background: <%= color %>" target="_blank" rel="noopener">
          <%= job_post.title %>
        </a>
      <% end %>
    </div>

    <div class="jobs-grid">
      <section class="jobs-card">
        <h2><i class="fas fa-bell"></i>New Update</h2>
        <ul>
          <% @new_updates.each do |job_post| %>
            <li>
              <a href="<%= job_post.link.presence || job_post_path(job_post.slug) %>" target="_blank" rel="noopener">
                <%= job_post.title %>
              </a>
            </li>
          <% end %>
        </ul>
      </section>

      <section class="jobs-card">
        <h2><i class="fas fa-ticket-alt"></i>Admit Card</h2>
        <ul>
          <% @admit_cards.each do |job_post| %>
            <li>
              <a href="<%= job_post.link.presence || job_post_path(job_post.slug) %>" target="_blank" rel="noopener">
                <%= job_post.title %>
              </a>
            </li>
          <% end %>
        </ul>
      </section>

      <section class="jobs-card">
        <h2><i class="fas fa-file-alt"></i>Top Online Form</h2>
        <ul>
          <% @online_forms.each do |job_post| %>
            <li>
              <a href="<%= job_post.link.presence || job_post_path(job_post.slug) %>" target="_blank" rel="noopener">
                <%= job_post.title %>
              </a>
            </li>
          <% end %>
        </ul>
      </section>
    </div>

    <% if @featured_job_posts.present? %>
      <div id="dynamic-posts" class="jobs-dynamic">
        <h3>New Job Alert</h3>
        <p>Stay tuned for the latest government job alerts across India.</p>
        <div class="meta">Updated regularly</div>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <div style="margin-top: 30px; text-align: right;">
        <%= link_to "Suggest Job Post", new_job_post_path, class: "crayons-btn crayons-btn--primary", style: "padding: 12px 24px; font-size: 16px; font-weight: 600;" %>
      </div>
    <% end %>
  </section>
</main>
